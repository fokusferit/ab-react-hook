{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": false,
    "pretty": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "typeRoots": ["./types", "./node_modules/@types"],
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "lib", "**/__tests__/**/*"]
}
